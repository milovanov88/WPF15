                    </TableRowGroup>
                </Table>
                </Section>
                <BlockUIContainer>
                    <StackPanel>
                        <Button Content="Возврат в главное меню" BorderBrush="#FF5D75B4"/>
                        
                    </StackPanel>
                </BlockUIContainer>




            </FlowDocument>
        </FlowDocumentScrollViewer>
    </Grid>
</Window>
